<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin require-restart="true">
    <id>com.github.wl2027.runtime.pivot.plugin</id>
    <name>runtime-pivot</name>
    <vendor>wl2027</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.all</depends>
    <depends>com.intellij.java</depends>


    <resource-bundle>messages.RuntimePivotBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <java.programPatcher implementation="com.runtime.pivot.plugin.PerRun"/>

    </extensions>


    <actions>
        <group id="RuntimePivot.MainMenu" text="Runtime Pivot" popup="true"
               icon="AllIcons.General.Locate">
            <separator text="program"/>
            <action id="RuntimePivot.ClassLoadTree" text="ClassLoad Tree"
                    icon="com.intellij.icons.AllIcons.Actions.ShowAsTree"
                    class="com.runtime.pivot.plugin.actions.ClassLoadTreeAction"/>
            <action id="RuntimePivot.TransformerList" text="Transformer List"
                    icon="com.intellij.icons.AllIcons.Actions.ListFiles"
                    class="com.runtime.pivot.plugin.actions.TransformerListAction"/>

            <separator text="class"/>
            <action id="RuntimePivot.DumpClass" text="Dump Class"
                    icon="com.intellij.icons.AllIcons.Nodes.Class"
                    class="com.runtime.pivot.plugin.actions.ClassDumpAction"/>
            <action id="RuntimePivot.DumpObjectClass" text="Dump Object Class"
                    icon="com.intellij.icons.AllIcons.Nodes.AbstractClass"
                    class="com.runtime.pivot.plugin.actions.ClassDumpAction"/>
            <action id="RuntimePivot.DumpClassList" text="Dump Class List"
                    icon="/icons/class-list.svg"
                    class="com.runtime.pivot.plugin.actions.ClassDumpAction"/>

            <separator text="method"/>
            <action id="RuntimePivot.MethodStartWatch" text="Start Track"
                    icon="com.intellij.icons.AllIcons.Actions.ProfileBlue"
                    class="com.runtime.pivot.plugin.actions.MethodStartWatchAction"/>
            <action id="RuntimePivot.MethodStopWatch" text="Stop Track"
                    icon="com.intellij.icons.AllIcons.Actions.Suspend"
                    class="com.runtime.pivot.plugin.actions.MethodStopWatchAction"/>
            <action id="RuntimePivot.MethodRestore" text="Breakpoint Restore"
                    icon="com.intellij.icons.AllIcons.Actions.Rollback"
                    class="com.runtime.pivot.plugin.actions.MethodRestoreAction"/>
            <action id="RuntimePivot.ExceptionRestore" text="Exception Interrupt"
                    icon="com.intellij.icons.AllIcons.Actions.BuildLoadChanges"
                    class="com.runtime.pivot.plugin.actions.MethodRestoreAction"/>

            <separator text="object"/>
            <action id="RuntimePivot.ObjectSize" text="Information"
                    icon="com.intellij.icons.AllIcons.General.BalloonInformation"
                    class="com.runtime.pivot.plugin.actions.ObjectSizeAction"/>
            <action id="RuntimePivot.ObjectInternals" text="Store"
                    icon="com.intellij.icons.AllIcons.Ide.IncomingChangesOn"
                    class="com.runtime.pivot.plugin.actions.ObjectInternalsAction"/>

            <action id="RuntimePivot.ObjectInternals2" text="Load"
                    icon="com.intellij.icons.AllIcons.Ide.OutgoingChangepsOn"
                    class="com.runtime.pivot.plugin.actions.ObjectInternalsAction"/>

            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </group>



